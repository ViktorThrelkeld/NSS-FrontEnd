%body
  .row
    .small-12.columns
      %h1 Address Book
  .row
    .small-2.columns
      %h6 Name
      %input#name{type: 'text', placeholder: 'Brian Threlkeld', autofocus: true}
    .small-2.columns
      %h6 Address
      %input#address{type: 'text', placeholder: '123 Elm St.'}
    .small-2.columns
      %h6 Website
      %input#web{type: 'text', placeholder: 'www.....'}
    .small-2.columns
      %h6 Email
      %input#email{type: 'text', placeholder: 'you@gmail.com'}
    .small-2.columns
      %h6 Pic
      %input#pic{type: 'text', placeholder: 'pic url'}
    .small-2.columns
      %h6 Push To Commit
      %input#add.small.button{type:'button', value: 'Add Peep!'}
  .row
    .small-12.columns
      %h4 My Peeps
      #peeps


