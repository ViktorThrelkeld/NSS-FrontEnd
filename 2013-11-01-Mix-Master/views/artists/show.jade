extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Artist
  .row
    .small-12.columns
      #artists
        .artist
          h3= artist.name
          img(src=artist.photo)
          p= artist.website
          p= artist.bio
          //- ul
          //-   each genre in artist.genres
          //-     li= genre
          //- p= artist.createdAt
          span: a.button.radius.alert.tiny(href='/artists/#{artist.id}/edit') Edit
          #nuke
            form(action='/artists/#{artist.id}', method='post')
              input(type='hidden', name='_method', value='delete')
              button.tiny.radius.alert(type='submit') Delete
