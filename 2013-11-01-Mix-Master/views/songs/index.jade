extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Songs
  .row
    .small-10.columns
      #songs
        each song in songs
          .song
            h3= song.title
            a(href='/songs/#{song.id}'): img(src=song.art)

            #nuke
              form(action='/songs/#{song.id}', method='post')
                input(type='hidden', name='_method', value='delete')
                button.tiny.radius.alert(type='submit') Delete




