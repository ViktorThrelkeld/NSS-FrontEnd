table#todos
  thead
    tr
      th Complete?
      th Title
      th Due Date
      th Priority
      th Nuke?
  tbody
    each todo in todos
      tr(style='background-color:#{todo.priority.color};')
        td.chkbox
          input(type='checkbox', name='complete') complete
        td= todo.title
        td= moment(todo.dueDate).format('dddd, MMMM Do YYYY')
        td= todo.priority.name
        td
          form(action='/todos/#{todo.id}', method='post')
            input(type='hidden', name='_method', value='delete')
            button.small.alert.rounded(type='submit') Delete