extends ../template/layout
include ../mixins/form-helper


block content
  .row
    .small-12.columns
      h1.subheader=post.title
  .row
    .small-2.columns
      a.button.small(href='/') Home
    .small-2.columns
      a.button.small(href='/posts') Posts
    .small-2.columns
      a.button.small.success(href='/posts/new') New
    .small-6.columns
  .row
    .small-12.columns
      .post
            table
              thead
                tr
                  th Title
                  th Author
                  th Date
                  th Tags
                  th
              tbody
                td= post.title
                td= post.author
                td= post.date
                td= post.tags
                td
                 form(action='/posts/#{post.id}', method='post')
                    input(type='hidden', name='_method', value='delete')
                    button.tiny.radius.alert(type='submit') Delete
            img(src=post.image)
            p= post.content
