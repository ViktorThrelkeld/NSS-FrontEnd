.row
  .small-12.columns
    %h3 Shop O Rama
.row
  .small-2.columns
    %input#product-image{type: 'text', placeholder: 'image.png'}
  .small-2.columns
    %input#product-name{type: 'text', placeholder: 'name'}
  .small-2.columns
    %input#product-weight{type: 'text', placeholder: 'weight'}
  .small-2.columns
    %input#product-price{type: 'text', placeholder: '$3.30'}
  .small-2.columns
    %input#product-off{type: 'text', placeholder: '14%'}
  .small-2.columns
    %input#add-product.small.radius.button{type: 'button', value: 'Add Product'}
.row
  .small-12.columns
    %table#products
      %tr
        %th Image
        %th Name
        %th Weight
        %th Price
        %th % Off
        %th Sale
        %th Nuke

.row
  .small-12.columns
    %input#previous.hidden.button.small.success{type: 'button', value: 'Previous'}
    %input#next.hidden.button.small.success{type: 'button', value: 'Next'}
.row
  .small-12.columns
    %h4 Customer Info
.row
  .small-4.columns
    %input#domestic{type: 'radio', name: 'address', value: 'domestic'} Domestic
    %input#international{type: 'radio', name: 'address', value: 'international'} International
  .small-2.columns
    %input#customer-image{type: 'text', placeholder: 'image.png' }
  .small-2.columns
    %input#customer-name{type: 'text', placeholder: 'Brian Threlkeld' }
  .small-4.columns
    %input#add-customer.small.radius.button{type: 'button', value: 'Add Customer'}
.row

.row
  .small-12.columns
    %select#select-customer
      %option{name: 'default', value: 'default'}Default
.row
  .small-12.columns
    %table#cart
      %thead
        %tr
          %th Name
          %th Count
          %th Amount
          %th Weight
          %th Shipping
          %th Total
          %th Nuke
      %tbody
      %tfoot
        %tr
          %td
          %td#cart-count
          %td#cart-amount
          %td#cart-weight
          %td#cart-shipping
          %td#cart-grand
          %td
.row
  .small-12.columns
    %input#purchase.small.radius.button{type: 'button', value: 'purchase'}
.row
  .small-12.cloumns
    %table#orders
      %thead
        %tr
          %th Id
          %th Time
          %th Customer
          %th Products
          %th Total
          %th Shipping
          %th Grand
          %th Nuke
      %tbody
      %tfoot
        %tr
          %td
          %td
          %td
          %td
          %td
          %td
          %td
          %td#revenue